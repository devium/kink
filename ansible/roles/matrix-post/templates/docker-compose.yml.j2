version: '3'
services:
  jitsi-keycloak:
    image: ghcr.io/devium/jitsi-keycloak:latest
    container_name: jitsi-keycloak
    restart: unless-stopped
    environment:
      JITSI_SECRET: {{ jitsi_jwt_secret }}
      DEFAULT_ROOM: meeting
      JITSI_URL: https://{{ jitsi_domain }}/
      JITSI_SUB: {{ jitsi_domain }}
    volumes:
    - ./config:/config
    ports:
    - 3000:3000

networks:
  default:
    external: true
    name: matrix
